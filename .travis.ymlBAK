language: python
cache: pip
env:
  global:
  - LD_PRELOAD=/lib/x86_64-linux-gnu/libSegFault.so
  - SEGFAULT_SIGNALS=all
  matrix:
  - TOXENV=check
  - TOXENV=docs
matrix:
  include:
  - python: '3.7'
    dist: xenial
    env:
    - TOXENV=py37
before_install:
- python --version
- uname -a
- lsb_release -a
install:
- pip install tox
- virtualenv --version
- easy_install --version
- pip --version
- tox --version
- set +x
script:
- travis_wait 20 tox -v
after_failure:
- more .tox/log/* | cat
- more .tox/*/log/* | cat
deploy:
  provider: pypi
  distributions: sdist bdist_wheel
  skip_cleanup: true
  skip_existing: true
  user: linhd-postdata
  password:
    secure: ""
  on:
    tags: true
    repo: linhd-postdata/poetrylab-api
    python: 3.7
    condition: "$TOXENV = py37"
notifications:
  email:
    on_success: never
    on_failure: always
